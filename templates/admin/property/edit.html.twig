{% extends 'base.html.twig' %}

{% block title 'Éditer les biens' %}

{% block body %}

    <div class="container mt-4">
       <h1>Éditer le bien</h1>
        {{ form_start(form) }}
        {#Pour modifier le théme du formulaire se rendre dans config/packages/twig.yaml et rajouter form_themes[]
        Les différents thèmes se trouvent dans vendor/symfony/twig-bridge/Ressources/views/Form#}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.title) }}</div>
            <div class="col-md-4">{{ form_row(form.surface) }}</div>
            <div class="col-md-4">{{ form_row(form.price) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3">{{ form_row(form.rooms) }}</div>
            <div class="col-md-3">{{ form_row(form.bedrooms) }}</div>
            <div class="col-md-3">{{ form_row(form.heat) }}</div>
            <div class="col-md-3">{{ form_row(form.floor) }}</div>
        </div>
        <div class="row">
            <div class="col-md-4">{{ form_row(form.adress) }}</div>
            <div class="col-md-4">{{ form_row(form.city) }}</div>
            <div class="col-md-4">{{ form_row(form.postal_code) }}</div>
            <div class="col-md-12">{{ form_row(form.description) }}</div>
            <div class="col-md-12">{{ form_row(form.sold) }}</div>
        </div>
        <button class="btn btn-primary">Éditer</button>
        {{ form_end(form) }}
    </div>

{% endblock %}